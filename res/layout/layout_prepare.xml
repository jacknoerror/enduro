<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dip"
    android:layout_weight="2"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:visibility="visible" >


    <Button
        android:id="@+id/scanButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:background="@drawable/search_btn_selector"
        android:text="@string/start_search"
        android:textSize="16sp"
        android:textColor="@color/white" />


    <ToggleButton
        android:id="@+id/tbtnSwitch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/tbtnswitch_btn_selector"
        android:textSize="16sp"
        android:textOff="@string/bluetooth_off"
        android:textOn="@string/bluetooth_on" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/green0"
        android:paddingBottom="@dimen/padding_large"
         >

        <TextView
            android:id="@+id/lvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="@string/bluetooth_near"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/black"
            android:text="@string/reset_bluetooth"
            android:textColor="@color/white"
            android:layout_margin="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:layout_gravity="center"
            />
        <ImageView 
            android:id="@+id/img_howto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_hint"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#000000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/howtoButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/howto_btn_selector"
            android:text="How to use?"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="12sp" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:background="@drawable/about_btn_selector"
            android:text="About ENDURO"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
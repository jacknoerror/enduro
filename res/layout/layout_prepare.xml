<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dip"
    android:layout_weight="2"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:visibility="visible" >

    <Button
        android:id="@+id/discoverButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="设置可见性"
        android:visibility="gone" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:background="@drawable/search_btn_selector"
        android:text="Start Scanning"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnDis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="本机可见性设置"
        android:visibility="gone" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="设备自检"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/tbtnSwitch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/tbtnswitch_btn_selector"
        android:textOff="Bluetooth OFF"
        android:textOn="Bluetooth ON" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="Bluetooth connection available："
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#7e8336" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clear_btn_selector"
            android:text="clear"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#000000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/howtoButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/howto_btn_selector"
            android:text="How to use?"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:background="@drawable/about_btn_selector"
            android:text="About ENDURO"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>